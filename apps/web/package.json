{
  "name": "@fact-checker/web",
  "version": "0.1.0",
  "description": "Frontend for the Fact Checker System, a LangGraph implementation to verify factual accuracy of text.",
  "private": true,
  "scripts": {
    "build": "next build",
    "clean": "rm -rf .next node_modules && rm -f pnpm-lock.yaml bun.lockb yarn.lock package-lock.json",
    "lint": "ultracite lint",
    "format": "ultracite format",
    "dev": "next dev --turbopack",
    "fmc": "prettier --check \"**/*.{js,jsx,ts,tsx,json,md}\"",
    "fmw": "prettier --write \"**/*.{js,jsx,ts,tsx,json,md}\"",
    "start": "next start",
    "check-types": "tsc --noEmit",
    "tc": "tsc --noEmit"
  },
  "dependencies": {
    "@hono/zod-validator": "^0.5.0",
    "@langchain/langgraph-sdk": "^0.0.77",
    "@radix-ui/react-accordion": "^1.2.11",
    "@radix-ui/react-popover": "^1.1.14",
    "@radix-ui/react-slot": "^1.2.3",
    "@radix-ui/react-tooltip": "^1.2.7",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "framer-motion": "^12.12.1",
    "hono": "^4.7.10",
    "lucide-react": "^0.511.0",
    "motion": "^12.12.1",
    "next": "15.3.2",
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "tailwind-merge": "^3.3.0",
    "zod": "^3.25.7",
    "zustand": "^5.0.4"
  },
  "devDependencies": {
    "@biomejs/biome": "^1.9.4",
    "@tailwindcss/postcss": "^4",
    "@types/node": "^20",
    "@types/react": "^19.0.0",
    "@types/react-dom": "^19.0.0",
    "tailwindcss": "^4",
    "tw-animate-css": "^1.3.0",
    "typescript": "^5",
    "ultracite": "^4.2.5"
  }
}
